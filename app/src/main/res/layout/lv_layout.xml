<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <com.example.administrator.myapplication.Activity.Swipelayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/listview_ll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#C6E2FF">
            <TextView
                android:id="@+id/tv_lineBranchName"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="#218868"
                android:gravity="center"
                android:text="aaa"
                android:paddingRight="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_banci"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111"
                    android:layout_weight="1"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"
                    android:layout_weight="1"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="333"
                    android:layout_weight="1"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hide_ll"
            android:layout_width="100dp"
            android:layout_height="70dp"
            >
            <RelativeLayout
                android:clickable="true"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="#ff8c00">
                <TextView
                    android:id="@+id/put"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装车"
                    android:gravity="center"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </LinearLayout>
    </com.example.administrator.myapplication.Activity.Swipelayout>
</RelativeLayout>